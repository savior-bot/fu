{
    "manifest_version": 3,
    "name": "Fusy Focus",
    "description": "A better approach to productive web browsing",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16" : "images/icon-16.png",
        "32" : "images/icon-32.png",    
        "96" : "images/icon-96.png",
        "128" : "images/icon-128.png"
    },
    "background" : {
        "background_worker" : "background.js",
        "type" : "module"
    },
    "permissions" : [
        "storage"
    ]
}